{
  "server": {
    "host": "indexing-server",
    "port": 7000
  },
  "peer": {
    "base_port": 7100
  },
  "replication": {
    "replication_factor": 2
  },
  "logging": {
    "peer": {
      "log_file": "logs/peer.log",
      "max_bytes": 1048576,
      "backup_count": 5,
      "level": "INFO"
    }
  },
  "data": {
    "peers": {
      "peer1": {
        "shared_dir": "data/peer1/shared",
        "download_dir": "data/peer1/downloaded"
      },
      "peer2": {
        "shared_dir": "data/peer2/shared",
        "download_dir": "data/peer2/downloaded"
      }
    },
    "file_generation": {
      "kb": { "count": 100, "size_bytes": 1024, "extension": "txt" },
      "mb": { "count": 10, "size_bytes": 1048576, "extension": "bin" },
      "gb": { "count": 0, "size_bytes": 1073741824, "extension": "bin" },
      "chunk_size_bytes": 1048576,
      "pattern": "{peer}_{size}_{num}.{ext}"
    }
  }
}